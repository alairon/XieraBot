{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "resolveJsonModule": false,
    "target": "ES2019",
    "outDir": "bin"
  },
  "include": [
    "xiera/**/*",
    "xiera/index.js",
    "xiera/xiera.json"
  ],
  "exclude": [
    "node_modules",
    "bin",
    "tests",
    "xiera/components/Event/ICS/*",
    "xiera/components/Event/Legacy/*"
  ]
}
